@model DrivingSchoolWeb.ViewModel.QuestionCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyAudio" class="control-label"></label>
                <input asp-for="MyAudio" type="file" class="form-control" />
                <span asp-validation-for="MyAudio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyImage" class="control-label"></label>
                <input asp-for="MyImage" type="file" class="form-control" />
                <span asp-validation-for="MyImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Answeres" class="control-label"></label>
                <input asp-for="Answeres" class="form-control" />
                <span asp-validation-for="Answeres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorrectAnswer" class="control-label"></label>
                <input asp-for="CorrectAnswer" class="form-control" />
                <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SerieId" class="control-label"></label>                
                <input type="text" readonly class="form-control" value="@ViewBag.Serienum"/>
                <input asp-for="SerieId" value="@ViewBag.SerieId" hidden/>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@ViewData["SerieId"]" asp-route-Serienum="@ViewData["Serienum"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
